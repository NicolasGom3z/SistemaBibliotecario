@page
@model SitemaBibliotecario.App.Presentacion.Pages.ListAutoresModel
@{
}
<h1>Listado de autores en el sistema</h1>
<p>
    @Html.ActionLink("Listar Todo", "./ListAutores")
</p>

@using (Html.BeginForm())
{
    <p>
        Buscar x Nombre: @Html.TextBox("SearchString")  
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    @foreach (var autor in Model.autores)
    {
        <tr>
            <td>@autor.id</td>
            <td>@autor.aut_nombre</td>
            
            <td>
                <a class="btn btn-primary table-btn" asp-page="./EditAutores" asp-route-autorId="@autor.id">
                  <i class="fas fa-address-book fa-lg" aria-hidden="true">Editar</i>
                </a>
            </td>
           <td>
                <a class="btn btn-danger table-btn" asp-page="./DeleteAutores" asp-route-autorId="@autor.id">
                  <i class="fas fa-address-book fa-lg" aria-hidden="true">Eliminar</i>
                </a>
            </td>  
        </tr>
    }
</table>

<a asp-page=".\EditAutores" class="btn btn-primary">Agregar nuevo autor</a>

