@page
@model SitemaBibliotecario.App.Presentacion.Pages.DeleteCategoriasLibroModel
@{
}

<h2>Eliminar categoria de libro @Model.categoriaLibro.catLibro_nombre</h2>
<form method="post">
    <input type="hidden" asp-for="categoriaLibro.id" />
    <div class="form-group">
        Id en base de datos: @Model.categoriaLibro.id
    </div>
   
    <div class="form-group">
        Nombres: @Model.categoriaLibro.catLibro_nombre
    </div>
    
    
    <button type="submit" class="btn btn-success">Eliminar</button>    
</form>

<a asp-page="./ListCategoriasLibro" class="btn-default">Volver a la Lista de categorias de Libro... </a>
