@page
@model SitemaBibliotecario.App.Presentacion.Pages.DeleteIdiomasModel
@{
}

<h2>Eliminar idioma de libro @Model.idiomaLibro.idiomaLibro_nombre</h2>
<form method="post">
    <input type="hidden" asp-for="idiomaLibro.id" />
    <div class="form-group">
        Id en base de datos: @Model.idiomaLibro.id
    </div>
   
    <div class="form-group">
        Nombres: @Model.idiomaLibro.idiomaLibro_nombre
    </div>
    
    
    <button type="submit" class="btn btn-success">Eliminar</button>    
</form>

<a asp-page="./ListIdiomas" class="btn-default">Volver a la Lista de idiomas de Libro... </a>
